{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

<div class="container-fluid  mt-5" style="margin-bottom: 36px;">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                
            </div>
            <div class="col-md-6">
                <h1>Register</h1>
                <form method="post" enctype="multipart/form-data">
                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm) }}
                    
                    
                <div class="mb-3">
                    {{ form_widget(registrationForm.email, {attr:{class:'form-control', placeholder: 'Email'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_widget(registrationForm.psuedo, {attr:{class:'form-control', placeholder: 'Pseudo'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_widget(registrationForm.discord, {attr:{class:'form-control', placeholder: 'Discord'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_widget(registrationForm.city, {attr:{class:'form-control', placeholder: 'City'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_widget(registrationForm.country, {attr:{class:'form-control', placeholder: 'Country'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_widget(registrationForm.avatar, {attr:{class:'form-control', type:'file', mapped:'false'}}) }}
                </div>
                <p class="mb-3">*Votre mot de passe doit contenir au moins une lettre majuscule, une lettre minuscule,8 caracters minimum et un chiffre</p>
                <div class="mb-3">
                    {{ form_widget(registrationForm.plainPassword, {label: 'Password', attr:{class:'form-control', placeholder: 'Entrez votre password'}
                        
                    }) }}
                </div>
                <div class="mb-3">
                    <label class="form-check-label"></label>
                    {{ form_widget(registrationForm.agreeTerms, {attr: {class: 'form-check-label'}}) }}
                     <small class="form-text text-muted">
                            En acceptant, vous confirmez que vos données seront sauvegardées dans notre base de données en conformité avec le <strong>RGPD</strong>.
                            Vous pouvez supprimez vos données en envoyant un message <strong><a href="{{ path('contact') }}">ici.</a></strong>
                    </small>
                </div>
                    
                
                    <div class="row">
                        <div class="col-md-6">
                            <button type="submit"class="btn btn-success">Register</button>
                        </div>
                        <div class="col-md-6">
                            <div class="row">
                                 <div class="col-md-6">
                                    Déjà inscrit?
                                 </div>
                                 <div class="col-md-6">
                                    <a class="btn btn-md btn-primary" href="{{path('app_login')}}">Login</a>
                                 </div>
                            </div>
                        </div>

                    </div>

                {{ form_end(registrationForm) }}
                <form>
            </div>
            <div class="col-md-3">
                
            </div>
        </div>
    </div>
</div>
{% endblock %}
